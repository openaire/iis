<workflow-app xmlns="uri:oozie:workflow:0.4" name="importer_database_project">
	
	<parameters>
        <property>
            <name>database_facade_factory_classname</name>
            <value>eu.dnetlib.iis.wf.importer.facade.WebServiceDatabaseFacadeFactory</value>
            <description>ServiceFacadeFactory implementation class name producing eu.dnetlib.iis.wf.importer.facade.DatabaseFacade</description>
        </property>
		<property>
			<name>database_service_location</name>
			<value>$UNDEFINED$</value>
			<description>Database service location URL</description>
		</property>
		<property>
			<name>database_name</name>
			<value>dnet_openaireplus</value>
			<description>database name</description>
		</property>
		<property>
			<name>output</name>
			<description>project output directory</description>
		</property>
        <property>
            <name>database_client_connection_timeout</name>
            <value>60000</value>
            <description>database client connection timeout (expressed in milliseconds)</description>
        </property>
        <property>
            <name>database_client_read_timeout</name>
            <value>60000</value>
            <description>database client reading timeout (expressed in milliseconds)</description>
        </property>
		<property>
			<name>resultset_client_read_timeout</name>
			<value>60000</value>
			<description>result set client reading timeout (expressed in milliseconds)</description>
		</property>
        <property>
            <name>output_report_root_path</name>
            <description>base directory for storing reports</description>
        </property>
        <property>
            <name>output_report_relative_path</name>
            <value>import_project</value>
            <description>directory for storing report (relative to output_report_root_path)</description>
        </property>
	</parameters>

    <global>
        <job-tracker>${jobTracker}</job-tracker>
        <name-node>${nameNode}</name-node>
        <configuration>
            <property>
                <name>mapreduce.job.queuename</name>
                <value>${queueName}</value>
            </property>
            <property>
                <name>oozie.launcher.mapred.job.queue.name</name>
                <value>${oozieLauncherQueueName}</value>
            </property>
        </configuration>
    </global>
    
    
	<start to="database-project-importer" />
	
	<action name="database-project-importer">
		<java>
			<!-- The data generated by this node is deleted in this section -->
			<prepare>
				<delete path="${nameNode}${output}" />
			</prepare>
			<main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
			<arg>eu.dnetlib.iis.wf.importer.database.project.DatabaseServiceBasedProjectImporter</arg>
			<arg>-Pimport.database.service.location=${database_service_location}</arg>
			<arg>-Pimport.database.service.dbname=${database_name}</arg>
			<arg>-Pimport.database.client.connection.timeout=${database_client_connection_timeout}</arg>
            <arg>-Pimport.database.client.read.timeout=${database_client_read_timeout}</arg>
            <arg>-Pimport.resultset.client.read.timeout=${resultset_client_read_timeout}</arg>
            <arg>-Pimport.facade.factory.classname=${database_facade_factory_classname}</arg>
			<arg>-Oproject=${output}</arg>
            <capture-output />
		</java>
		<ok to="report" />
		<error to="fail" />
	</action>
	
    <action name="report">
        <java>
            <main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
            <arg>eu.dnetlib.iis.common.report.ReportGenerator</arg>
            <arg>-Preport.import.project=${wf:actionData('database-project-importer')['PROJECT_COUNTER']}</arg>
            <arg>-Oreport=${output_report_root_path}/${output_report_relative_path}</arg>
        </java>
        <ok to="end" />
        <error to="fail" />
    </action>
    
	<kill name="fail">
		<message>Unfortunately, the process failed -- error message:
			[${wf:errorMessage(wf:lastErrorNode())}]</message>
	</kill>
	<end name="end" />
</workflow-app>
